<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aMuse"
        xmlns:Wpf="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
    
        xmlns:Wpf1="clr-namespace:Vlc.DotNet.Forms;assembly=Vlc.DotNet.Forms" x:Class="aMuse.UI.MainWindow"
        mc:Ignorable="d"
    
        Title="MainWindow" Height="550" Width="800">

    <Grid Background="#FF235543">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="3" >
            <Wpf:VlcControl  x:Name="vlcPlayer" Height="0" >

            </Wpf:VlcControl>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" VerticalAlignment="Center" Grid.Column="1" 
                    Grid.ColumnSpan="3" RenderTransformOrigin="0.515,0.533" >
            <Image  Margin="0 5 10 5" Width="auto" Height="auto"  
                Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="1" 
                Cursor="Hand"
                   MouseLeftButtonDown="Image_MouseLeftButtonDown"
                 Source="testAlbumCover.jpg"/>
            <TextBlock Name="infoBox" TextWrapping="Wrap" Text="TextBlock" Height="23" Width="150" FontSize="14" FontWeight="Bold"/>
            <Button  x:Name="Previous" Width="50" Height="30" 
                     Click="Previous_Click" Margin="15,0,0,0" HorizontalContentAlignment="Center"  >
                <Image Source="Icons/Rewind_52px.png" />
            </Button>
            <Button  x:Name="PlayPauseButton" Width="50" Height="30" HorizontalContentAlignment="Center"  
                     Click="PlayPause_Click" Margin="15,0,0,0"  >
                <Image x:Name="imageInside" Source="Icons/Play_52px.png"  />

            </Button>
            <Button  x:Name="Next" Width="50" Height="30" HorizontalContentAlignment="Center"
                     Click="Next_Click" Margin="15,0,0,0"  >
                <Image Source="Icons/Fast Forward_52px.png" />
            </Button>
            <Button  x:Name="MuteButton" Width="50" Height="30" HorizontalContentAlignment="Center"
                     Click="Mute_Click" Margin="15,0,0,0"  >
                <Image Source="Icons/Mute_52px.png" />
            </Button>
            <TextBlock Foreground="White" VerticalAlignment="Center" Margin="5"  ><Run Text="Volume"/></TextBlock>
            <Slider  x:Name="volumeSlider" VerticalAlignment="Center" ValueChanged="ChangeMediaVolume" 
       Minimum="0" Maximum="100" Value="80" Width="70"/>


        </StackPanel>
        <Frame Name="MainFrame" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="3"
                NavigationUIVisibility="Hidden"
               Margin="0,0,0,0">
        </Frame>
    </Grid>
</Window>
